{
  "name": "assets-wizard",
  "version": "1.0.0",
  "description": "Export your assets directly to github actions",
  "main": "code.js",
  "scripts": {
    "build": "concurrently \"npm run build:ui\" \"npm run  build:core\"",
    "build:core": "esbuild src/index.ts --bundle --outfile=build/index.js --platform=node",
    "build:ui": "npx vite build --minify esbuild --emptyOutDir=false",
    "watch": "concurrently \"npm run build:ui -- --watch\" \"npm run build:core -- --watch\"",
    "lint": "run-p lint:*",
    "lint:types:ui": "tsc --noEmit -p ./ui/tsconfig.json",
    "lint:types:core": "tsc --noEmit -p ./src/tsconfig.json",
    "lint:style": "eslint src ui --ext .ts,.tsx",
    "test": "vitest --run",
    "coverage": "vitest --coverage"
  },
  "author": "pmqueiroz",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@types/handlebars": "^4.1.0",
    "@types/node": "^20.8.7",
    "@types/prettier": "^3.0.0",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/coverage-v8": "^0.34.6",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.5",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "shx": "^0.3.4",
    "typescript": "*",
    "vite": "^4.5.0",
    "vite-plugin-singlefile": "^0.13.5",
    "vitest": "^0.34.6"
  }
}
